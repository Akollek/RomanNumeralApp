<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.amielkollek.romannumeralcalculator.MainActivity" >

    <TextView android:id="@+id/arabic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arabic_numeral"
        android:textSize="25sp"
        android:paddingTop="20dp"
		android:paddingBottom="10dp" />
   	    	<EditText android:id="@+id/arabic"
   	    	    android:layout_below="@id/arabic_title"
		        android:paddingTop="20dp"
				android:paddingBottom="20dp"        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/arabic_hint"
		        android:inputType="number"/>
   	    	
    <TextView android:id="@+id/roman_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roman_numeral"
        android:textSize="25sp"
        android:paddingTop="20dp"
		android:paddingBottom="10dp"
		android:layout_below="@id/arabic" />
   	    	<EditText android:id="@+id/roman"
   	    	    android:layout_below="@id/roman_title"
		        android:paddingTop="20dp"
				android:paddingBottom="20dp"        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/roman_hint"
		        android:inputType="text"/>
   	    	
   	<android.inputmethodservice.KeyboardView
        android:id="@+id/roman_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

</RelativeLayout>
